{
  "author": "Octopus Deploy",
  "bugs": {
    "url": "https://github.com/OctopusDeploy/install-octopus-cli-action/issues"
  },
  "dependencies": {
    "@actions/core": "1.11.1",
    "@actions/http-client": "4.0.0",
    "@actions/tool-cache": "2.0.2",
    "uuid": "9.0.1"
  },
  "description": "GitHub Action to Install the Octopus CLI",
  "devDependencies": {
    "@eslint/eslintrc": "3.3.4",
    "@eslint/js": "9.39.3",
    "@stylistic/eslint-plugin": "5.9.0",
    "@types/jest": "29.5.14",
    "@types/node": "24.7.2",
    "@types/semver": "7.7.1",
    "@types/tmp": "0.2.6",
    "@types/uuid": "9.0.8",
    "@typescript-eslint/parser": "8.56.1",
    "@typescript-eslint/eslint-plugin": "8.56.1",
    "@vercel/ncc": "0.38.4",
    "eslint": "9.39.3",
    "eslint-plugin-github": "6.0.0",
    "eslint-plugin-jest": "29.15.0",
    "globals": "16.5.0",
    "jest": "29.7.0",
    "jest-circus": "29.7.0",
    "jest-junit": "15.0.0",
    "js-yaml": "4.1.1",
    "prettier": "2.8.8",
    "tmp": "0.2.5",
    "ts-jest": "29.4.6",
    "typescript": "5.9.3"
  },
  "homepage": "https://github.com/OctopusDeploy/install-octopus-cli-action#readme",
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "setupFiles": [
      "<rootDir>/src/test-setup.ts"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts"
    ],
    "testRunner": "jest-circus/runner",
    "testTimeout": 10000,
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "verbose": true
  },
  "jest-junit": {
    "outputDirectory": "reports",
    "outputName": "jest-junit.xml",
    "ancestorSeperator": " > ",
    "uniqueOutputName": "false",
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}"
  },
  "keywords": [
    "cli",
    "deployment",
    "octopus-deploy",
    "github-actions"
  ],
  "license": "Apache-2.0",
  "main": "dist/main.js",
  "name": "install-octopus-cli-action",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OctopusDeploy/install-octopus-cli-action.git"
  },
  "scripts": {
    "all": "npm run format && npm run build && npm test",
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "prebuild": "eslint src/**/*.ts",
    "postbuild": "ncc build out/main.js -o dist",
    "test": "jest --ci --reporters=default --reporters=jest-junit --passWithNoTests"
  },
  "version": "4.0.0"
}
